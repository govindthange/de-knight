{
	"name": "Web 2.0 Application",
	"service": "app",

	// "postCreateCommand": "npm install ; npm -i -g create-react-app@5.0.1",

	// postAttachCommand is always run when the window connects (aka 'attaches')
	// in the following cases:
	// 1. Single container
	// 2. Single container from Git repository.
	// 3. Docker Compose.
	// 4. Attach to existing container (postAttachCommand only)

	// This command is run every time the container is started.
	// i.e. it is only run when the container is (re)started.
	// Note that by default the contianer is stopped and after the last
	// window is discontained (not in the 'attach' case). But only after
	// 10 seconds (to spped up window reloads)
	// - Call the process w/ 'bash' to terminal the shell to use.
	// - Specify '&' to specify that its a background process.
	// - Specify nohup (no-hangup) o/w the process may get killed after 15 min.
	"postStartCommand": "nohup bash -c 'node server.js &'",

	"runArgs": [
		// "--cap-add=SYS_PTRACE",
		// "--security-opt",
		// "seccomp=unconfined"
	],
	"shutdownAction": "none",

	"dockerComposeFile": [
		"../../docker-compose-app.yml"
	],

	// Open the sub-folder with the source code
	"workspaceFolder": "/workspace/app",
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},
	"extensions": [
		"dbaeumer.vscode-eslint",
		"esbenp.prettier-vscode",
		"dsznajder.es7-react-js-snippets",
		"streetsidesoftware.code-spell-checker",
		"vincaslt.highlight-matching-tag",
		"formulahendry.auto-rename-tag",
		"coenraads.bracket-pair-colorizer-2",
		"naumovs.color-highlight",
		"wayou.vscode-todo-highlight"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [8080],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "yarn install",

	// Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "node"
}